(defwidget bar []
    (box :class "bar-widget" :orientation "v" :space-evenly true
        (box :orientation "v" :space-evenly false :valign "start"
            (launcher)
            (workspaces)
        )
        (box :orientation "v" :space-evenly false :valign "end"
            (systray :class "bean" :orientation "v" :icon-size 22 :spacing 8 :visible "${systray-items-count > 0}")
            (tray)
            (clock)
        )
    )
)
